<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.webtrekk.SDKTest.PageExampleActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="This is an Example Acitivity to demonstrate the page tracking capabilities. Everything you do here gets tracked." android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pagetext" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Button"
            android:id="@+id/button_action"
            android:onClick="onButtonActionClicked" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Checkbox"
            android:id="@+id/checkBox"
            android:checked="false"
            android:onClick="onCheckboxActionClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Param Action Button"
            android:id="@+id/button_action_param"
            android:onClick="onButtonActionParamsClicked" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Page Activity"
            android:id="@+id/button_next_page"
            android:onClick="onButtonNextPage" />
    </LinearLayout>

</RelativeLayout>
